{
  "version": 2,
  "buildCommand": "bash scripts/prebuild.sh && npm run build",
  "installCommand": "npm install --legacy-peer-deps --no-audit --no-fund",
  "framework": "nextjs",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "SKIP_ENV_VALIDATION": "1",
    "NPM_CONFIG_PREFER_OFFLINE": "true"
  },
  "functions": {
    "app/**/*.tsx": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
